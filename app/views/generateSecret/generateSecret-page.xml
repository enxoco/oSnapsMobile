<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded">
    <Page.actionBar>
        <ActionBar title="oSNap" />
    </Page.actionBar>
    <FlexboxLayout>
        <StackLayout class="form">
            <Label id="status" text="{{ status }}" textWrap="true" visibility="{{ showDetails ? 'visible' : 'collapsed' }}" />
            <Button id="copyClipboard" text="copy to clipboard" tap="copyText" visibility="{{ showDetails ? 'visible' : 'collapsed' }}"/>
            <TextView id="email" marginTop="15px" borderColor="#DEDEDE" backgroundColor="#f0f0f0"
                borderWidth="1" height="200px" hint="Enter Note"
                returnKeyType="send" class="input input-border"></TextView>
            <Button text="Generate Secret" class="btn btn-primary"
                tap="signIn" />
                <Button text="Home" tap="goHome" class="fixed-bottom" />
        </StackLayout>
    </FlexboxLayout>
    
</Page>