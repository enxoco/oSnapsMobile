<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded">
    <Page.actionBar>
        <ActionBar title="oSnap" />
    </Page.actionBar>


    <FlexboxLayout>

        <StackLayout class="form">
            <Label text="Enter the code in the box below to retrieve your secret message.  Please note that once this message is retrieved once it is deleted forever!" textWrap="true" />

            <TextField id="pin" marginTop="15px" borderColor="#DEDEDE" backgroundColor="#f0f0f0"
                borderWidth="1" hint="Enter Pin" text="{{ pin }}" class="input input-border"></TextField>
                            <TextView id="message" text="{{ secret }}" textWrap="true" visibility="{{ showDetails ? 'visible' : 'collapsed' }}" />

            <Button text="Retreive Secret" class="btn btn-primary"
                tap="retrieveSecret" />
                                <Button text="Home" tap="goHome" class="fixed-bottom" />

        </StackLayout>
        
    </FlexboxLayout>
</Page>